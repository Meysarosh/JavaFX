<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project.controllers.PozicioZarasController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <ComboBox fx:id="idDropdown" promptText="Válassz egy ID-t" />
    <TextArea fx:id="positionDetails" editable="false" wrapText="true" />
    <Button fx:id="closeButton" text="Bezár" onAction="#handleClosePosition" />
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>
